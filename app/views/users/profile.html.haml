%div.my_account
  %h2 My account

  %p
  Name: #{current_user.username}
  %p
  E-mail: #{current_user.email}
  %p
  My role: #{current_user.role}
  %p.avatar
    %img{:src => current_user.avatar}

  %p
  =link_to "Edit my account", edit_user_registration_path

  -if can? :create, @scheme
    =link_to "Добавить схему", new_scheme_path

-if can? :create, @scheme
  %div.my_scheme 
    %h2 All schemes
    -@schemes.reverse.each do |scheme|
      = p 
      = link_to scheme.title, scheme_path(scheme)
      %br
-if can? :edit, @user
  %div.users
    %h2 Users
    -@users.each do |user|
      = p 
      =link_to user.email
      = link_to "Destroy", admin_destroy_user_path(user), method: :delete, data: { confirm: "You sure?" }
      =link_to "Edit user"
      %br 