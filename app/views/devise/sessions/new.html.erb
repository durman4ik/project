<div class="content">
        
        <hgroup class="top">
            <h1>Log In</h1>
        </hgroup>
        
        <custom-form class="form-login" submit="submit"><form class="stylized ng-pristine ng-valid" ng-class="{'working': working}" name="_form">
  <p class="error-all ng-hide" ng-show="__errors">
    <span class="error-content">
      <!-- ngRepeat: error in __errors -->
    </span>
  </p>
  <div ng-transclude="">
            
            <div class="social-login ng-scope">
                <ul class="options">
                    <li>
                        <a class="btn fb" ng-class="{'disable': !$root.fb_ready}" intent-auth="facebook" ng-disabled="working">
                          Sign In With Facebook
                        </a>
                    </li>
                    <li>
                        <a class="btn github" intent-auth="github" ng-disabled="working">
                          Sign In With GitHub
                        </a>
                    </li>
                </ul>
                <p class="or-label"><span>or</span></p>
            </div>

            <div class="field email email" ng-class="{'error': field.__changed &amp;&amp; field.__error}" field-type="email" field-name="email" field-autocomplete="off" field-placeholder="E-mail" required="required">
    <label ng-show="field.title" for="field_email" class="ng-binding ng-hide"><span ng-show="field.__is_required" class="">*</span></label>
    <span class="icon"></span>
    <span class="error-content ng-hide" ng-show="field.__errors">
      <!-- ngRepeat: error in field.__errors -->
    </span>

    <div class="target"><input id="field_email" rel="input" type="email" name="email" ng-model="field.value" ng-required="field.__is_required" placeholder="E-mail" ng-maxlength="" autocomplete="off" class="ng-scope ng-pristine ng-invalid ng-invalid-required ng-valid-email" required="required"></div>
    <p class="description ng-binding ng-hide" ng-show="field.description"></p>
</div>
            <div class="field password password" ng-class="{'error': field.__changed &amp;&amp; field.__error}" field-type="password" field-name="password" field-autocomplete="off" field-placeholder="Password" required="required">
    <label ng-show="field.title" for="field_password" class="ng-binding ng-hide"><span ng-show="field.__is_required" class="">*</span></label>
    <span class="icon"></span>
    <span class="error-content ng-hide" ng-show="field.__errors">
      <!-- ngRepeat: error in field.__errors -->
    </span>

    <div class="target"><input id="field_password" rel="input" type="password" name="password" ng-model="field.value" ng-required="field.__is_required" placeholder="Password" ng-maxlength="" autocomplete="off" class="ng-scope ng-pristine ng-invalid ng-invalid-required" required="required"></div>
    <p class="description ng-binding ng-hide" ng-show="field.description"></p>
</div>
            
            <small class="t-right forgot-password ng-scope">
                <a ng-href="/forgot-password" href="/forgot-password">Forgot your password?</a>
            </small>

            <div class="submit-field ng-scope">
                <input type="submit" class="btn bigger full" ng-click="__submit()" ng-disabled="working" value="Sign In">
            </div>

            <small class="info ng-scope">
                Not a user? <a ng-href="/create-account" href="/create-account">Create new account</a><br>
            </small>
        </div>
</form></custom-form>

    </div>