<h2><%= t("devise.registrations.sign_in") %></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true, placeholder: "email@example.com" %>
    <%= f.input :password, required: false, placeholder: "Больше 8 знаков" %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

    <%= f.button :submit, t("devise.registrations.sign_in") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
