<h2><%= t("devise.registrations.sign_up") %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="form-inputs">
  	<%= f.input :username, requred: true, placeholder: "Username"  %>	
    <%= f.input :email, required: true, autofocus: true, placeholder: "email@example.com"  %>
    <%= f.input :password, required: true %>
    <%= f.input :password_confirmation, required: true %>

    <%= f.button :submit, t("devise.registrations.sign_up") %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
