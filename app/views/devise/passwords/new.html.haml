.container
  .content
    .top
      %h1= t("devise.registrations.forgot_pass")
    .stylized
      .auth-block
        = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          = f.error_notification
          .field.password
            .target
              = f.input :email, required: true, autofocus: true, label: false, placeholder: "E-mail"
          .form-actions
            = f.button :submit, t("forms.reset_password")
=render "home/back_link"