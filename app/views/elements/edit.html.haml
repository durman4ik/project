.container
  %div.details_list
    %h2 Редактирование
    %div.new_scheme
      = simple_form_for @element do |f|
        = f.input        :title, class: "form-control"
        = f.input        :num_inputs
        = f.file_field   :image 
        %p Свойства
        =f.simple_fields_for :properties do |p|
          %div
            = p.input      :title
            = p.input      :value
        = f.button :submit
=render "home/back_link"