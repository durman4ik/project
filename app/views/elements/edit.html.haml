.container
  %div.details_list
    %h2 Редактирование    
  .stylized
    %div.new_element
      = simple_form_for(@element, params[:element] => element_path(@element)) do |f|
        .field.email
          .target
            = f.input         :title, class: "form-control"
        .field.email
          .target
            = f.input        :num_inputs
        = image_tag @element.image.url(:thumb)
        = f.file_field   :image 
        = link_to 'Добавить свойство', '', :class => 'duplicate_nested_form'
        =f.simple_fields_for :properties do |p|
          .duplicatable_nested_form
            .padding-25-block
              .field.email.property-name
                .target
                  = p.input  :title, required: true, label: false, placeholder: "Название свойства"
              .field.email.property-value
                .target
                  = p.input :value, required: true, label: false, placeholder: "Значение"
        = f.button :submit
=render "home/back_link"