.container
  %div.details_list
    %h2 Редактирование #{t("welcome.new_scheme")}
    %div.new_scheme
      = simple_form_for(:element, params[:element] => elements_path, method: :post, html: {role: 'form' }) do |f|
        = f.input        :title, class: "form-control"
        = f.input        :num_inputs
        = f.file_field   :image 
        = f.button       :submit